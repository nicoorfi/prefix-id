{
    "name": "nicoorfi/prefix-id",
    "type": "library",
    "description": "Generate unique, URL-safe, alphanumeric IDs with a specified prefix.",
    "keywords": [
        "nicoorfi",
        "prefix",
        "id",
        "unique"
    ],
    "homepage": "https://github.com/nicoorfi/prefix-id",
    "license": "MIT",
    "authors": [
        {
            "name": "Nico Orfanos",
            "email": "nico@sigmie.com",
            "homepage": "https://github.com/nicoorfi",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {}
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
